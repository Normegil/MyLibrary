<?xml version="1.0" encoding="UTF-8" ?>
<persistence version="2.0"
             xmlns="http://java.sun.com/xml/ns/persistence">
    <persistence-unit name="TestPU" transaction-type="RESOURCE_LOCAL">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <!-- Jar-File (generated and filled by maven) used to indicate path to jar containing main resources
             It is send to auto detect every class in main jar even though classes are in another classpath than this
             persistence file -->
        <jar-file>${project.build.outputDirectory}</jar-file>
        <properties>
            <property name="javax.persistence.jdbc.driver" value="org.hsqldb.jdbcDriver"/>
            <property name="javax.persistence.jdbc.url" value="jdbc:hsqldb:mem:myLibraryTestDB"/>
            <property name="javax.persistence.jdbc.user" value="sa"/>
            <property name="javax.persistence.jdbc.password" value=""/>

            <property name="javax.persistence.schema-generation.database.action" value="drop-and-create"/>
            <property name="javax.persistence.schema-generation.create-source" value="metadata"/>
            <property name="javax.persistence.schema-generation.drop-source" value="metadata"/>

			<property name="hibernate.show_sql" value="false"/>
        </properties>
    </persistence-unit>
	<persistence-unit name="PersistentTestPU" transaction-type="RESOURCE_LOCAL">
		<provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
		<!-- Jar-File (generated and filled by maven) used to indicate path to jar containing main resources
			 It  is send to auto detect every class in main jar even though classes are in another classpath than this
			 persistence file -->
		<jar-file>${project.build.outputDirectory}</jar-file>
		<properties>
			<property name="javax.persistence.jdbc.driver" value="org.mariadb.jdbc.Driver"/>
			<property name="javax.persistence.jdbc.url" value="jdbc:mysql://127.0.0.1:3306/myLibrary"/>
			<property name="javax.persistence.jdbc.user" value="root"/>
			<property name="javax.persistence.jdbc.password" value="root"/>

			<property name="javax.persistence.schema-generation.database.action" value="drop-and-create"/>
			<property name="javax.persistence.schema-generation.create-source" value="metadata"/>
			<property name="javax.persistence.schema-generation.drop-source" value="metadata"/>

			<property name="hibernate.show_sql" value="false"/>
		</properties>
	</persistence-unit>
    <persistence-unit name="MainPU" transaction-type="JTA">
        <jta-data-source>java:jboss/datasources/PostgreSQLDSDS</jta-data-source>

	    <jar-file>${project.build.outputDirectory}</jar-file>
        <properties>
            <!--<property name="javax.persistence.schema-generation.database.action" value="create"/>
            <property name="javax.persistence.schema-generation.create-source" value="metadata"/>
            <property name="javax.persistence.schema-generation.drop-source" value="metadata"/>-->
        </properties>
    </persistence-unit>
</persistence>